{
    "compilerOptions": {
        "outDir": "./dist",
        "target": "es5",
        "module": "ESNext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "sourceMap": false,
        "baseUrl": "./",
        "paths": {
            "@/*": [
                "src/*"
            ],
            "tslib" : ["node_modules/tslib/tslib.d.ts"]
        },
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"
    ],
}